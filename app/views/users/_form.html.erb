<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
   <%= render partial: 'layouts/form_input_errors', object: @user.errors %>
  <% end %>

  <div class="field input-control text">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>

  <div class="field input-control text">
    <%= f.label :balance %><br />
    <%= input_nbr "field input-control text", "user[balance]", @user.balance, "â‚¬" %>
  </div>

  <div class="field input-control text">
    <%= f.label :level %><br />
    <%= f.select :level, UsersController::LEVELS, {:prompt => 'Select level'} %>
  </div>

  <div class="field input-control text">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field input-control password pin-field">
    <%= f.label "Pin" %><br />
    <%= f.password_field :password, class: "keyboard" %>
  </div>
  <div class="field input-control password pin-field">
    <%= f.label "Confirm Pin" %><br />
    <%= f.password_field :password_confirmation, class: "keyboard" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>